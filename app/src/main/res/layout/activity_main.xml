<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".main.MainActivity">

  <Button
    android:id="@+id/main_page_handler_test_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="Handler_test">
  </Button>

  <Button
    android:id="@+id/main_page_runtime_permission_test_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/main_page_handler_test_button"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="runtime_permission_test">
  </Button>


  <Button
    android:id="@+id/main_page_recyclerview_test_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/main_page_runtime_permission_test_button"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="recyclerview_test">
  </Button>

  <Button
    android:id="@+id/main_page_Listview_test_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/main_page_recyclerview_test_button"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="listview_test">
  </Button>

  <Button
    android:id="@+id/main_page_event_test_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/main_page_Listview_test_button"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="event_test">
  </Button>

  <Button
    android:id="@+id/main_page_custom_test_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/main_page_event_test_button"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="custom_test">
  </Button>





</androidx.constraintlayout.widget.ConstraintLayout>
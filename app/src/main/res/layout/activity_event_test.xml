<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".event.EventTestActivity">

  <Button
    android:id="@+id/motion_event_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="点击启动MotionEvent测试">
  </Button>

  <Button
    android:id="@+id/key_event_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/motion_event_button"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="长按启动KeyEvent测试">
  </Button>

  <TextView
    android:id="@+id/key_event_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/key_event_button"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="按back键弹出dialog">
  </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>